<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Detalhes do Usuário - SMS24H Financeiro</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <%- include('partials/styles') %>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('partials/sidebar', { activeMenu: activeMenu, user: user }) %>

      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
        <!-- Mobile Menu Button -->
        <div class="d-md-none mb-3 mt-3">
          <button class="btn btn-outline-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu">
            <i class="fas fa-bars"></i> Menu
          </button>
        </div>

        <h2 class="page-title">Detalhes do Usuário</h2>
        <%- include('partials/alerts') %>

        <!-- Formulário de Busca -->
        <% if (!usuario) { %>
          <div class="row justify-content-center mt-5">
            <div class="col-md-8 col-lg-6">
              <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                  <h5 class="mb-0"><i class="fas fa-search"></i> Buscar Usuário</h5>
                </div>
                <div class="card-body">
                  <p class="text-muted mb-4">Digite um dos campos abaixo para buscar o usuário:</p>
                  
                  <form action="/usuario" method="GET">
                    <div class="mb-3">
                      <label for="email" class="form-label"><i class="fas fa-envelope"></i> Email</label>
                      <input type="email" class="form-control" id="email" name="email" placeholder="usuario@exemplo.com">
                    </div>

                    <div class="text-center my-3">
                      <span class="text-muted">ou</span>
                    </div>

                    <div class="mb-3">
                      <label for="api_key" class="form-label"><i class="fas fa-key"></i> API Key</label>
                      <input type="text" class="form-control" id="api_key" name="api_key" placeholder="Digite a API Key">
                    </div>

                    <div class="text-center my-3">
                      <span class="text-muted">ou</span>
                    </div>

                    <div class="mb-4">
                      <label for="cpf" class="form-label"><i class="fas fa-id-card"></i> CPF</label>
                      <input type="text" class="form-control" id="cpf" name="cpf" placeholder="000.000.000-00">
                    </div>

                    <div class="d-grid">
                      <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-search"></i> Buscar Usuário
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% } %>

        <!-- Resultado da Busca -->
        <% if (busca && !usuario) { %>
          <div class="alert alert-warning mt-4" role="alert">
            <i class="fas fa-exclamation-triangle"></i> 
            Nenhum usuário encontrado com <strong><%= busca.tipo %>:</strong> <%= busca.valor %>
          </div>
          <div class="text-center mt-3">
            <a href="/usuario" class="btn btn-outline-primary">
              <i class="fas fa-search"></i> Nova Busca
            </a>
          </div>
        <% } %>

        <!-- Dados do Usuário -->
        <% if (usuario) { %>
          <div class="row mt-4">
            <div class="col-12">
              <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                  <h5 class="mb-0"><i class="fas fa-user-circle"></i> Informações Pessoais</h5>
                  <a href="/usuario" class="btn btn-sm btn-light">
                    <i class="fas fa-search"></i> Nova Busca
                  </a>
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <div class="info-item">
                        <i class="fas fa-hashtag text-primary"></i>
                        <strong>ID:</strong>
                        <span><%= usuario.id %></span>
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <div class="info-item">
                        <i class="fas fa-user text-primary"></i>
                        <strong>Nome:</strong>
                        <span><%= usuario.nome || 'Não informado' %></span>
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <div class="info-item">
                        <i class="fas fa-envelope text-primary"></i>
                        <strong>Email:</strong>
                        <span><%= usuario.email || 'Não informado' %></span>
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <div class="info-item">
                        <i class="fas fa-id-card text-primary"></i>
                        <strong>CPF:</strong>
                        <span><%= usuario.cpf || 'Não informado' %></span>
                      </div>
                    </div>
                    <div class="col-md-6 mb-3 d-none">
                      <div class="info-item">
                        <i class="fas fa-phone text-primary"></i>
                        <strong>Telefone:</strong>
                        <span><%= usuario.telefone || 'Não informado' %></span>
                      </div>
                    </div>
                    <div class="col-md-6 mb-3 d-none">
                      <div class="info-item">
                        <i class="fas fa-building text-primary"></i>
                        <strong>Empresa:</strong>
                        <span><%= usuario.empresa || 'Não informado' %></span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                  <h5 class="mb-0"><i class="fas fa-wallet"></i> Informações Financeiras</h5>
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-4 mb-3">
                      <div class="info-item highlight">
                        <i class="fas fa-dollar-sign text-success"></i>
                        <strong>Crédito:</strong>
                        <span class="text-success fs-5">R$ <%= usuario.credito ? parseFloat(usuario.credito).toFixed(2) : '0.00' %></span>
                      </div>
                    </div>
                    <div class="col-md-4 mb-3 d-none">
                      <div class="info-item">
                        <i class="fas fa-chart-line text-success"></i>
                        <strong>Saldo:</strong>
                        <span>R$ <%= usuario.saldo ? parseFloat(usuario.saldo).toFixed(2) : '0.00' %></span>
                      </div>
                    </div>
                    <div class="col-md-4 mb-3 d-none">
                      <div class="info-item">
                        <i class="fas fa-exchange-alt text-success"></i>
                        <strong>Taxa:</strong>
                        <span><%= usuario.taxa || '0' %>%</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                  <h5 class="mb-0"><i class="fas fa-key"></i> Informações de API</h5>
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-12 mb-3">
                      <div class="info-item">
                        <i class="fas fa-key text-info"></i>
                        <strong>API Key:</strong>
                        <code class="bg-light p-2 rounded"><%= usuario.api_key || 'Não informado' %></code>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                  <h5 class="mb-0"><i class="fas fa-cog"></i> Configurações</h5>
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-4 mb-3">
                      <div class="info-item">
                        <i class="fas fa-brands fa-whatsapp text-success"></i>
                        <strong>WhatsApp:</strong>
                        <% if (usuario.whatsapp_enabled === 1) { %>
                          <span class="badge bg-success"><i class="fas fa-check"></i> Habilitado</span>
                        <% } else { %>
                          <span class="badge bg-secondary"><i class="fas fa-times"></i> Desabilitado</span>
                        <% } %>
                      </div>
                    </div>
                    <div class="col-md-4 mb-3">
                      <div class="info-item">
                        <i class="fas fa-clock text-warning"></i>
                        <strong>Criado em:</strong>
                        <span><%= formatDate(usuario.created_at) %></span>
                      </div>
                    </div>
                    <div class="col-md-4 mb-3">
                      <div class="info-item">
                        <i class="fas fa-sync text-warning"></i>
                        <strong>Atualizado em:</strong>
                        <span><%= formatDate(usuario.last_update) %></span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <% if (usuario.obs) { %>
                <div class="card shadow-sm mb-4">
                  <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-comment"></i> Observações</h5>
                  </div>
                  <div class="card-body">
                    <p class="mb-0"><%= usuario.obs %></p>
                  </div>
                </div>
              <% } %>

              <!-- Histórico de Recargas -->
              <% if (recargas && recargas.length > 0) { %>
                <div class="card shadow-sm mb-4">
                  <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-history"></i> Histórico de Recargas (Últimas 20)</h5>
                    <% if (usuario.cpf) { %>
                      <a href="/search?searchTerm=<%= usuario.cpf %>" class="btn btn-sm btn-light">
                        <i class="fas fa-list"></i> Ver Todas
                      </a>
                    <% } %>
                  </div>
                  <div class="card-body p-0">
                    <div class="table-responsive">
                      <table class="table table-hover mb-0">
                        <thead class="table-light">
                          <tr>
                            <th>ID</th>
                            <th>Data</th>
                            <th>Valor</th>
                            <th>Método</th>
                            <th>Gateway</th>
                            <th>Status</th>
                            <th>TX ID</th>
                            <th>Ação</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% recargas.forEach(recarga => { %>
                            <tr>
                              <td><strong>#<%= recarga.id %></strong></td>
                              <td><%= formatDate(recarga.createdAt) %></td>
                              <td>
                                <span class="fw-bold text-success">
                                  R$ <%= recarga.valor ? parseFloat(recarga.valor).toFixed(2) : '0.00' %>
                                </span>
                              </td>
                              <td><%= recarga.metodoNome || '-' %></td>
                              <td>
                                <span class="badge bg-info">
                                  <%= recarga.gateway || '-' %>
                                </span>
                              </td>
                              <td>
                                <% 
                                  let statusBadge = 'secondary';
                                  let statusText = recarga.status;
                                  if (recarga.pago) {
                                    statusBadge = 'success';
                                    statusText = 'Pago';
                                  } else if (recarga.status === 'pendente' || recarga.status === 'pending') {
                                    statusBadge = 'warning';
                                    statusText = 'Pendente';
                                  } else if (recarga.status === 'cancelado' || recarga.status === 'expired') {
                                    statusBadge = 'danger';
                                    statusText = 'Cancelado';
                                  }
                                %>
                                <span class="badge bg-<%= statusBadge %>"><%= statusText %></span>
                              </td>
                              <td>
                                <% if (recarga.invoice_gateway_id) { %>
                                  <code class="small"><%= recarga.invoice_gateway_id.substring(0, 20) %>...</code>
                                <% } else { %>
                                  -
                                <% } %>
                              </td>
                              <td>
                                <a href="/invoice/<%= recarga.id %>" class="btn btn-sm btn-outline-primary">
                                  <i class="fas fa-eye"></i> Ver
                                </a>
                              </td>
                            </tr>
                          <% }); %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              <% } %>

              <!-- Histórico de Ativações -->
              <% if (ativacoes && ativacoes.length > 0) { %>
                <div class="card shadow-sm mb-4">
                  <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center flex-wrap">
                    <h5 class="mb-0"><i class="fas fa-mobile-alt"></i> Histórico de Ativações</h5>
                    <div class="d-flex gap-2 align-items-center mt-2 mt-md-0">
                      <label for="limitAtivacoes" class="text-white mb-0 small">Itens por página:</label>
                      <select id="limitAtivacoes" class="form-select form-select-sm" style="width: auto;" onchange="changeLimit(this.value)">
                        <option value="10" <%= limitAtivacoes === 10 ? 'selected' : '' %>>10</option>
                        <option value="20" <%= limitAtivacoes === 20 ? 'selected' : '' %>>20</option>
                        <option value="50" <%= limitAtivacoes === 50 ? 'selected' : '' %>>50</option>
                        <option value="100" <%= limitAtivacoes === 100 ? 'selected' : '' %>>100</option>
                      </select>
                    </div>
                  </div>
                  <div class="card-body p-0">
                    <div class="table-responsive">
                      <table class="table table-hover mb-0">
                        <thead class="table-light">
                          <tr>
                            <th>ID</th>
                            <th>Número</th>
                            <th>Serviço</th>
                            <th>Data</th>
                            <th>Status</th>
                            <th>Código</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% ativacoes.forEach(ativacao => { %>
                            <tr>
                              <td><strong>#<%= ativacao.id %></strong></td>
                              <td><code><%= ativacao.chip_number || '-' %></code></td>
                              <td><%= ativacao.service_name || ativacao.alias_service || '-' %></td>
                              <td><%= formatDate(ativacao.initial_time || ativacao.initial_date) %></td>
                              <td>
                                <% 
                                  let statusBadge = 'secondary';
                                  let statusText = 'Pendente';
                                  if (ativacao.status === 6 || ativacao.status === 2 || ativacao.status === 3) { 
                                    statusBadge = 'success';
                                    statusText = 'Confirmado';
                                  } else if (ativacao.status === 8) { 
                                    statusBadge = 'danger';
                                    statusText = 'Cancelado';
                                  } else if (ativacao.status === 1 || ativacao.status === -1) { 
                                    statusBadge = 'warning';
                                    statusText = 'Pendente';
                                  }
                                %>
                                <span class="badge bg-<%= statusBadge %>"><%= statusText %></span>
                              </td>
                              <td>
                                <% if (ativacao.status === 6 || ativacao.status === 2 || ativacao.status === 3) { %>
                                  <code class="text-success"><%= ativacao.code || '-' %></code>
                                <% } else { %>
                                  <span class="text-muted">-</span>
                                <% } %>
                              </td>
                            </tr>
                          <% }); %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                  
                  <!-- Paginação -->
                  <% if (totalAtivacoes > limitAtivacoes) { %>
                    <div class="card-footer">
                      <div class="d-flex justify-content-between align-items-center flex-wrap">
                        <div class="text-muted small mb-2 mb-md-0">
                          Mostrando <%= (currentPageAtivacoes - 1) * limitAtivacoes + 1 %> 
                          até <%= Math.min(currentPageAtivacoes * limitAtivacoes, totalAtivacoes) %> 
                          de <%= totalAtivacoes %> ativações
                        </div>
                        <nav>
                          <ul class="pagination pagination-sm mb-0">
                            <% 
                              const totalPages = Math.ceil(totalAtivacoes / limitAtivacoes);
                              const maxButtons = 5;
                              let startPage = Math.max(1, currentPageAtivacoes - Math.floor(maxButtons / 2));
                              let endPage = Math.min(totalPages, startPage + maxButtons - 1);
                              
                              if (endPage - startPage < maxButtons - 1) {
                                startPage = Math.max(1, endPage - maxButtons + 1);
                              }
                            %>
                            
                            <li class="page-item <%= currentPageAtivacoes === 1 ? 'disabled' : '' %>">
                              <a class="page-link" href="?<%= busca ? (busca.tipo === 'ID' ? 'id=' : busca.tipo === 'Email' ? 'email=' : busca.tipo === 'API Key' ? 'api_key=' : 'cpf=') + busca.valor + '&' : '' %>pageAtivacoes=1&limitAtivacoes=<%= limitAtivacoes %>">Primeira</a>
                            </li>
                            <li class="page-item <%= currentPageAtivacoes === 1 ? 'disabled' : '' %>">
                              <a class="page-link" href="?<%= busca ? (busca.tipo === 'ID' ? 'id=' : busca.tipo === 'Email' ? 'email=' : busca.tipo === 'API Key' ? 'api_key=' : 'cpf=') + busca.valor + '&' : '' %>pageAtivacoes=<%= currentPageAtivacoes - 1 %>&limitAtivacoes=<%= limitAtivacoes %>">Anterior</a>
                            </li>
                            
                            <% for (let i = startPage; i <= endPage; i++) { %>
                              <li class="page-item <%= i === currentPageAtivacoes ? 'active' : '' %>">
                                <a class="page-link" href="?<%= busca ? (busca.tipo === 'ID' ? 'id=' : busca.tipo === 'Email' ? 'email=' : busca.tipo === 'API Key' ? 'api_key=' : 'cpf=') + busca.valor + '&' : '' %>pageAtivacoes=<%= i %>&limitAtivacoes=<%= limitAtivacoes %>"><%= i %></a>
                              </li>
                            <% } %>
                            
                            <li class="page-item <%= currentPageAtivacoes === totalPages ? 'disabled' : '' %>">
                              <a class="page-link" href="?<%= busca ? (busca.tipo === 'ID' ? 'id=' : busca.tipo === 'Email' ? 'email=' : busca.tipo === 'API Key' ? 'api_key=' : 'cpf=') + busca.valor + '&' : '' %>pageAtivacoes=<%= currentPageAtivacoes + 1 %>&limitAtivacoes=<%= limitAtivacoes %>">Próxima</a>
                            </li>
                            <li class="page-item <%= currentPageAtivacoes === totalPages ? 'disabled' : '' %>">
                              <a class="page-link" href="?<%= busca ? (busca.tipo === 'ID' ? 'id=' : busca.tipo === 'Email' ? 'email=' : busca.tipo === 'API Key' ? 'api_key=' : 'cpf=') + busca.valor + '&' : '' %>pageAtivacoes=<%= totalPages %>&limitAtivacoes=<%= limitAtivacoes %>">Última</a>
                            </li>
                          </ul>
                        </nav>
                      </div>
                    </div>
                  <% } %>
                </div>
              <% } %>
            </div>
          </div>
        <% } %>
      </main>
    </div>
  </div>

  <style>
    .info-item {
      padding: 10px;
      border-left: 3px solid #e9ecef;
      background-color: #f8f9fa;
      border-radius: 4px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .info-item.highlight {
      background-color: #d4edda;
      border-left-color: #28a745;
    }

    .info-item i {
      font-size: 1.2rem;
    }

    .info-item strong {
      min-width: 100px;
    }

    .info-item code {
      font-size: 0.9rem;
      word-break: break-all;
    }

    .card {
      transition: box-shadow 0.3s;
    }

    .card:hover {
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
  </style>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function changeLimit(newLimit) {
      const urlParams = new URLSearchParams(window.location.search);
      urlParams.set('limitAtivacoes', newLimit);
      urlParams.set('pageAtivacoes', '1'); // Reset to first page
      window.location.search = urlParams.toString();
    }
  </script>
</body>
</html>
