<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Detalhes do Usuário - SMS24H Financeiro</title>
  <%- include('partials/styles') %>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('partials/sidebar') %>

      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
        <%- include('partials/header', { title: 'Detalhes do Usuário' }) %>
        <%- include('partials/alerts') %>

        <!-- Formulário de Busca -->
        <% if (!usuario) { %>
          <div class="row justify-content-center mt-5">
            <div class="col-md-8 col-lg-6">
              <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                  <h5 class="mb-0"><i class="fas fa-search"></i> Buscar Usuário</h5>
                </div>
                <div class="card-body">
                  <p class="text-muted mb-4">Digite um dos campos abaixo para buscar o usuário:</p>
                  
                  <form action="/usuario" method="GET">
                    <div class="mb-3">
                      <label for="email" class="form-label"><i class="fas fa-envelope"></i> Email</label>
                      <input type="email" class="form-control" id="email" name="email" placeholder="usuario@exemplo.com">
                    </div>

                    <div class="text-center my-3">
                      <span class="text-muted">ou</span>
                    </div>

                    <div class="mb-3">
                      <label for="api_key" class="form-label"><i class="fas fa-key"></i> API Key</label>
                      <input type="text" class="form-control" id="api_key" name="api_key" placeholder="Digite a API Key">
                    </div>

                    <div class="text-center my-3">
                      <span class="text-muted">ou</span>
                    </div>

                    <div class="mb-4">
                      <label for="cpf" class="form-label"><i class="fas fa-id-card"></i> CPF</label>
                      <input type="text" class="form-control" id="cpf" name="cpf" placeholder="000.000.000-00">
                    </div>

                    <div class="d-grid">
                      <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-search"></i> Buscar Usuário
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% } %>

        <!-- Resultado da Busca -->
        <% if (busca && !usuario) { %>
          <div class="alert alert-warning mt-4" role="alert">
            <i class="fas fa-exclamation-triangle"></i> 
            Nenhum usuário encontrado com <strong><%= busca.tipo %>:</strong> <%= busca.valor %>
          </div>
          <div class="text-center mt-3">
            <a href="/usuario" class="btn btn-outline-primary">
              <i class="fas fa-search"></i> Nova Busca
            </a>
          </div>
        <% } %>

        <!-- Dados do Usuário -->
        <% if (usuario) { %>
          <div class="row mt-4">
            <div class="col-12">
              <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                  <h5 class="mb-0"><i class="fas fa-user-circle"></i> Informações Pessoais</h5>
                  <a href="/usuario" class="btn btn-sm btn-light">
                    <i class="fas fa-search"></i> Nova Busca
                  </a>
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <div class="info-item">
                        <i class="fas fa-hashtag text-primary"></i>
                        <strong>ID:</strong>
                        <span><%= usuario.id %></span>
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <div class="info-item">
                        <i class="fas fa-user text-primary"></i>
                        <strong>Nome:</strong>
                        <span><%= usuario.nome || 'Não informado' %></span>
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <div class="info-item">
                        <i class="fas fa-envelope text-primary"></i>
                        <strong>Email:</strong>
                        <span><%= usuario.email || 'Não informado' %></span>
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <div class="info-item">
                        <i class="fas fa-id-card text-primary"></i>
                        <strong>CPF:</strong>
                        <span><%= usuario.cpf || 'Não informado' %></span>
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <div class="info-item">
                        <i class="fas fa-phone text-primary"></i>
                        <strong>Telefone:</strong>
                        <span><%= usuario.telefone || 'Não informado' %></span>
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <div class="info-item">
                        <i class="fas fa-building text-primary"></i>
                        <strong>Empresa:</strong>
                        <span><%= usuario.empresa || 'Não informado' %></span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                  <h5 class="mb-0"><i class="fas fa-wallet"></i> Informações Financeiras</h5>
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-4 mb-3">
                      <div class="info-item highlight">
                        <i class="fas fa-dollar-sign text-success"></i>
                        <strong>Crédito:</strong>
                        <span class="text-success fs-5">R$ <%= usuario.credito ? parseFloat(usuario.credito).toFixed(2) : '0.00' %></span>
                      </div>
                    </div>
                    <div class="col-md-4 mb-3">
                      <div class="info-item">
                        <i class="fas fa-chart-line text-success"></i>
                        <strong>Saldo:</strong>
                        <span>R$ <%= usuario.saldo ? parseFloat(usuario.saldo).toFixed(2) : '0.00' %></span>
                      </div>
                    </div>
                    <div class="col-md-4 mb-3">
                      <div class="info-item">
                        <i class="fas fa-exchange-alt text-success"></i>
                        <strong>Taxa:</strong>
                        <span><%= usuario.taxa || '0' %>%</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                  <h5 class="mb-0"><i class="fas fa-key"></i> Informações de API</h5>
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-12 mb-3">
                      <div class="info-item">
                        <i class="fas fa-key text-info"></i>
                        <strong>API Key:</strong>
                        <code class="bg-light p-2 rounded"><%= usuario.api_key || 'Não informado' %></code>
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <div class="info-item">
                        <i class="fas fa-percentage text-info"></i>
                        <strong>API Tax:</strong>
                        <span><%= usuario.api_tax || '0' %>%</span>
                      </div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <div class="info-item">
                        <i class="fas fa-toggle-on text-info"></i>
                        <strong>API Enabled:</strong>
                        <% if (usuario.api_enabled === 1) { %>
                          <span class="badge bg-success"><i class="fas fa-check"></i> Ativo</span>
                        <% } else { %>
                          <span class="badge bg-secondary"><i class="fas fa-times"></i> Inativo</span>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                  <h5 class="mb-0"><i class="fas fa-cog"></i> Configurações</h5>
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-4 mb-3">
                      <div class="info-item">
                        <i class="fas fa-brands fa-whatsapp text-success"></i>
                        <strong>WhatsApp:</strong>
                        <% if (usuario.whatsapp_enabled === 1) { %>
                          <span class="badge bg-success"><i class="fas fa-check"></i> Habilitado</span>
                        <% } else { %>
                          <span class="badge bg-secondary"><i class="fas fa-times"></i> Desabilitado</span>
                        <% } %>
                      </div>
                    </div>
                    <div class="col-md-4 mb-3">
                      <div class="info-item">
                        <i class="fas fa-clock text-warning"></i>
                        <strong>Criado em:</strong>
                        <span><%= formatDate(usuario.created_at) %></span>
                      </div>
                    </div>
                    <div class="col-md-4 mb-3">
                      <div class="info-item">
                        <i class="fas fa-sync text-warning"></i>
                        <strong>Atualizado em:</strong>
                        <span><%= formatDate(usuario.updated_at) %></span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <% if (usuario.obs) { %>
                <div class="card shadow-sm mb-4">
                  <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-comment"></i> Observações</h5>
                  </div>
                  <div class="card-body">
                    <p class="mb-0"><%= usuario.obs %></p>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        <% } %>
      </main>
    </div>
  </div>

  <style>
    .info-item {
      padding: 10px;
      border-left: 3px solid #e9ecef;
      background-color: #f8f9fa;
      border-radius: 4px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .info-item.highlight {
      background-color: #d4edda;
      border-left-color: #28a745;
    }

    .info-item i {
      font-size: 1.2rem;
    }

    .info-item strong {
      min-width: 100px;
    }

    .info-item code {
      font-size: 0.9rem;
      word-break: break-all;
    }

    .card {
      transition: box-shadow 0.3s;
    }

    .card:hover {
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
  </style>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
